<style>
td{
    padding-top: 2px;
    padding-bottom: 2px;
}

#login-form{
    padding-top: 20px;
}

.form-label{
    padding-right: 5px;
}

.login-button{
    text-align: center;
}

#loginErrorMessage{
    color: red;
    white-space: pre;
}
