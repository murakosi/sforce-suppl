<div id="menuList">
    <ul></ul>
</div>

<div id="loginSpaceArea"></div>

<div id="flashArea">
    <% flash.each do |key, value| %>
        <div id="flashMessage" class="alert alert-<%= key %>"><%= simple_format(value) %></div>
    <% end %>
</div>

<div id="loginArea">
    <div id="loginFormArea">      
        <%= form_for :login_param, url: login_path do |f| %>
            <div class="table login-form-table">
                <div class="row">
                    <div class="login-form-label">
                        <%= f.label :user_name, 'User Name:' %>
                    </div>    
                    <div class="login-form-element">
                        <%= f.text_field :name, value: "" %>
                    </div>
                </div>
                <div class="row">
                    <div class="login-form-label">
                        <%= f.label 'Password:' %>
                    </div>
                    <div class="login-form-element">
                        <%= f.password_field :password, value: "" %>
                    </div>
                </div>
                <div class="row">
                    <div class="login-form-label">
                        <%= f.label 'Sandbox:' %>
                    </div>
                    <div class="login-form-element">
                        <%= f.check_box :sandbox %>
                    </div> 
                </div>
                <div class="row">
                    <div class="login-form-label">
                        <%= f.label :api_version, 'API Version: ' %>
                    </div>
                    <div class="login-form-element">
                        <div>
                            <%= f.select :api_version, api_version_list %>
                        </div>
                        <div></div>
                    </div>
                </div>
                <div class="row">
                    <div class="login-form-label"></div>
                    <div id="loginButtonArea">
                        <%= f.submit 'Login', :class => 'btn btn-primary btn-sm' %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
