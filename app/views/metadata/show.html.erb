<style>
.resultTab{
	padding-right: 7px;
}

.resultSoql{
	border: 1px solid lightgray;
	font-size: 9pt;
	padding: 4px;
	margin-bottom: 2px;
	margin-top: 2px;
	white-space: pre;
}

.resultGrid {
	background: white;
	outline: 0;
	border: 0px solid gray;
}

#messageArea{
    width: 50%;
    display: none;
    color: red;
    white-space: pre;
}

#mainArea{
	padding-top: 20px;
	width:100%;
	margin: 0 auto;
}

#formArea{
	width: 70%;
	margin: 0 auto;
}

#dummyArea{
	width: 15%;
	height: 10px;
	/*border: 1px solid lightgray;*/
	float: left;
}
#treeArea{
	width: 60%;
	border: 0px solid lightgray;
	//margin: 0 auto;
	float:left;
}
#tree{
	margin-top:5px;
	border: 1px solid lightgray;
	overflow:scroll;
	height:500px;
}

.button_to,
.button_to div {
	font-size: 14px;
	font-family:Arial;
  	display: inline;
}
</style>
<% javascript 'handsontable.full.min','jquery-1.11.2.min','jquery-ui-1.11.3.min', 'jstree', 'jstree.min','metadata' %>
<div id="menuList">
    <ul>
		<li><%= link_to "Logout", logout_path, method: :delete %></li>
		<li><%= link_to "SOQL", soql_path, method: :get %></li>
		<li><%= link_to "Describe", describe_path, method: :get %></li>
    </ul>
</div>

<div>
<h1>Metadata#show</h1>
<p>Find me in app/views/metadata/show.html.erb</p>
</div>
<div id="mainArea">
	<div id="formArea">

	    <%= form_tag meta_refresh_path(), :method => :get, :class => "metadata-form" do %>
		<table>
			<tr>
				<td><%= label_tag 'Metadata: ' %></td>
				<td><%= select_tag :selected_directory, options_for_select(@metadata_directory), multiple: false %></td>
                <td><div id="metadata_child"><%= render partial: 'metadata_child', locals: {data_source: @metadata_child} %></div></td>
			</tr>
			<tr>
				<td colspan="3" class="login-button">
				<%= submit_tag 'Metadata', :class => 'btn btn-primary execute-metadata' %>
				</td>
			</tr>
		</table>
		<% end %>
		<div id="messageArea"><%= @input_error %></div>
	</div>

	<div id="dummyArea"></div>
	
	<div id="treeArea">
		<br>
		<%= button_to "CSV Export", meta_download_path(:format => "csv"), :method => :get, :id => "exp-btn", :class => "btn btn-default exp-btn" %>
		<%= button_to "Excel Export", meta_download_path(:format => "excel"), :method => :get, :id => "exp-btn", :class => "btn btn-default exp-btn" %>
		<input type="submit" name="Tree" action="refresh" value="Tree" id="tree-btn" class="btn btn-default" />
		<div id="tree"></div>
					
	</div>
</div>