<style>
.resultTab{
	padding-right: 7px;
}

.resultSoql{
	border: 1px solid lightgray;
	font-size: 9pt;
	font-family:Arial;
	padding: 4px;
	margin-bottom: 2px;
	margin-top: 2px;
}

.ui-widget input, .ui-widget select, .ui-widget textarea, .ui-widget button{
	font-size: 9.5pt;
	font-family:Arial;
	margin-bottom: 2px;
}

.button_to,
.button_to div {
  	display: inline;
}

.resultGrid {
	background: white;
	outline: 0;
	border: 0px solid gray;	
}


.ui-tabs .ui-tabs-panel {
	padding: 0;
	margin: 0;
}

.ui-tabs .ui-tabs-nav li a {
	font-size:10pt !important;
}

.noselect {
    -webkit-user-select: none; /* Safari */
       -moz-user-select: none; /* Firefox */
        -ms-user-select: none; /* Internet Explorer/Edge */
            user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome and Opera */
}

.ui-tabs .ui-tabs-nav .ui-tabs-anchor {
	float: left;
	text-decoration: none;
}

#tabArea ul li a { outline:none; /* outline-color:red */; }
#tabArea ul li { outline:none; /* outline-color:red */; }

.ui-tabs .ui-tabs-nav li.ui-tabs-active .ui-tabs-anchor,
.ui-tabs .ui-tabs-nav li.ui-state-disabled .ui-tabs-anchor,
.ui-tabs .ui-tabs-nav li.ui-tabs-loading .ui-tabs-anchor {
	/* cursor: pointer; */
}

.handsontable span.colHeader{
    font-size: 10pt;
}

.handsontable th, .handsontable td{
    font-size: 10pt;
}

.handsontable span.data{
    color: black;
    font-style:bold;
}

#messageArea{
    width: 50%;
    display: none;
    color: red;
    white-space: pre;
}

#mainArea{
	padding-top: 20px;
	width:100%;
	margin: 0 auto;
}

#formArea{
	width: 70%;
	margin: 0 auto;
}

#tabArea{
	width: 60%;
	border: 0px solid lightgray;
	float:left;
}
#dummyArea{
	width: 15%;
	height: 10px;
	/*border: 1px solid lightgray;*/
	float: left;
}
#tree{
	font-size:14px;
	height:500px;
	overflow:auto;
}

.jstree-default a { 
    white-space:normal !important; height: auto; 
}
.jstree-anchor {
    height: auto !important;
}
.jstree-default li > ins { 
    vertical-align:top; 
}
.jstree-leaf {
    height: auto;
}
.jstree-leaf a{
    height: auto !important;
}

</style>
<div>
<h1>Metadata#show</h1>
<p>Find me in app/views/metadata/show.html.erb</p>
</div>
<div id="mainArea">
	<div id="formArea">

	    <%= form_tag metadata_path(), :method => :post, :class => "metadata-form" do %>
		<table>
			<tr>
				<td><%= label_tag 'Metadata: ' %></td>
			</tr>
			<tr>
				<td colspan="3" class="login-button">
				<%= submit_tag 'Metadata', :class => 'btn btn-primary execute-metadata' %>
                <td><%= select_tag :selected_directory, options_for_select(@metadata_directory), multiple: false %></td>
				</td>
			</tr>
		</table>
		<% end %>
		<div id="messageArea"></div>
	</div>

	<div id="dummyArea"></div>
	
	<div id="tabArea">
		<br>
		<%= button_to "Export Excel", meta_download_path(:format => "excel"), :method => :post, :id => "exp-btn", :class => "btn btn-default sub-btn" %>
		<%= button_to "CSV Export", meta_download_path(:format => "csv"), :method => :post, :id => "exp-btn", :class => "btn btn-default sub-btn" %>
		<%= button_to "YAML Export", meta_download_path(:format => "yaml"), :method => :post, :id => "exp-btn", :class => "btn btn-default sub-btn" %>
				
		<ul>
			<li class="noselect"><a href="#list-result-tab">List</a></li>
			<li class="noselect"><a href="#read-result-tab">Tree</a></li>
			<li class="noselect"><a href="#sample-tab">Raw Data</a></li>
		</ul>
		<div id="list-result-tab" class="resultTab">
			<div id="list-overview" class="resultSoql">List
			</div>
			<div id="grid" class="resultGrid"></div>
		</div>
		<div id="read-result-tab" class="resultTab">
			<div id="read-overview" class="resultSoql">Tree</div>			
			<div id="tree"></div>
		</div>
		<div id="sample-tab" class="resultTab">
			<div id="sample-overview" class="resultSoql">Raw</div>
			<div id="sample" class="resultGrid"></div>
		</div>
	</div>
</div>