<style type="text/css">
	.right-align{
		/*float: right;*/
		text-align: right;
		margin-bottom: 2px;
	}

.right_label_block{
    display:table-cell;
    padding-top: 2px;
    padding-bottom: 2px;
    padding-right: 10px;
    border: 0px solid black;
    width: 40px;
    text-align: right;
    vertical-align: middle;	
}

.tbl{
	display:table;
    position: relative;
    top: 25%;
    /*color: #80ffff;*/
    color:black;
    margin: 0 auto;
}
.row {
    display:table-row;
    }
.row>div {
    display:table-cell;
    /*margin:15px;
    padding:15px;
    border:10px solid;
    background-color:#eee;*/
}
.label_col{
    padding-right: 10px;
    text-align: right;
    vertical-align: middle;
}
.label_col2{
    padding-right: 10px;
    text-align: right;
    vertical-align: top;
}
.input-sm2 {
    height: 30px;
    /* padding: 5px 10px; */
    font-size: 12px;
    line-height: 1.5;
    border-radius: 3px;
}
.create-dialog {
  /* Height & width depends on how you want to reveal the overlay (see JS below) */    
  height: 50%;
  width: 50%;
  position: fixed; /* Stay in place */
  z-index: 9999; /* Sit on top */
  left: 25%;
  top: 20%;
  background-color: #408080;
  /*opacity: 0.8;*/
  overflow-x: hidden; /* Disable horizontal scroll */
  display:none;
  border-radius: 12px;
  box-shadow: 9px 9px 9px rgba(0, 0, 0, .125);
}
</style>
<div id="soqlArea">

	<div id="formArea">
		<%= form_tag query_path(), :method => :post, :class => "execute-form" do %>
		<%= text_area_tag :input_soql,"select id from assetpolicy__c", :size => "120x5", :spellcheck => false %>
		<br>
		<%= submit_tag "Execute", :class => "btn btn-sm btn-primary execute-soql" %>
		&nbsp;&nbsp;<label><input type="checkbox" id="useTooling"/> Use Tooling API</label>
		&nbsp;&nbsp;<label><input type="checkbox" id="queryAll"/> Query all</label>
		<% end %>
		<p><div id="messageArea"></div></p>
	</div>

	<div id="dummyArea"></div>
	
	<div id="tabArea">
		<div style="float: left;">
		<%= button_tag "Export", :type => "button", :id => "exportBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
		<%= button_tag "Create", :type => "button", :id => "openCreatGridBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
		</div>
		<div class="right-align">
			<%= button_tag "Upsert", :type => "button", :id => "upsertBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
			<%= button_tag "Delete", :type => "button", :id => "deleteBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
			<%= button_tag "Undelete", :type => "button", :id => "undeleteBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
		</div>
		<ul id="soqlTabs"></ul>
	</div>
	
	<div id="creatGridArea" class="create-dialog">
		<div class="tbl">
		<div class="row">
			<div class="label_col">
				<%= label_tag :sobjects, 'sObjects: ' %>
			</div>
			<div class="sobject-list input-sm2 select2-single">
				<%= @describe_result %>
			</div>
		</div>
		
		<div class="row">
			<div class="label_col2">
				<%= label_tag :fields, 'Fields: ' %>
			</div>
			<div>
				<%= text_area_tag :fields,"", :size => "50x5", :spellcheck => false %>				
			</div>
		</div>

		<div class="row" style="margin-top:15px;"></div>

		<div class="row">
			<div></div>
			<div>
				<%= button_tag "Create", :type => "button", :id => "createGridBtn", :class => "btn btn-xs btn-primary ex-small-btn" %>
				<%= button_tag "Cancel", :type => "button", :id => "cancelCreateBtn", :class => "btn btn-xs btn-primary ex-small-btn" %>
			</div>
		</div>
	</div>

</div>

