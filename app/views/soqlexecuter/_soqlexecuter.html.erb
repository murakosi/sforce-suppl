<div id="soqlArea">

	<div class="formArea">
		<%= form_tag query_path(), :method => :post, :class => "execute-form" do %>
			<div>
				<%= text_area_tag :input_soql,"", :size => "120x5", :spellcheck => false %>
			</div>
			<div>
				<%= submit_tag "Execute", :class => "btn btn-sm btn-primary execute-soql" %>
				<label class="soqlOptions"><input type="checkbox" id="useTooling"/> Use Tooling API</label>
				<label class="soqlOptions"><input type="checkbox" id="queryAll"/> Query all</label>
			</div>
		<% end %>
		
		<p><div class="messageArea"></div></p>
	</div>
	
	<div class="tabArea">
		<div class="left-align-btn">
		<%= button_tag "Export", :type => "button", :id => "exportBtn", :class => "btn btn-xs btn-default ex-small-btn" %>
		<% if @describe_error.nil? %>
			<%= button_tag "Create", :type => "button", :id => "openCreatGridBtn", :class => "btn btn-xs btn-default ex-small-btn" %>
		<% end %>
		<%= button_tag "History", :type => "button", :id => "historyBtn", :class => "btn btn-xs btn-default ex-small-btn" %>
		</div>
		<div class="right-align-btn">
			<%= button_tag "Upsert", :type => "button", :id => "upsertBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
			<%= button_tag "Delete", :type => "button", :id => "deleteBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
			<%= button_tag "Undelete", :type => "button", :id => "undeleteBtn", :class => "btn btn-xs btn-warning ex-small-btn" %>
		</div>
		<ul id="soqlTabs">
			<li class="add-tab-li">
				<div id="addTabBtn" class="icon-plus"></div>
			</li>
		</ul>
	</div>
	
	<div id="soqlHistory" class="sidenav">
		<div class="soql-history-title noselect">SOQL History</div>
		<button class="closebtn" onclick="closeNav()">&times;</button>		
		<ul>	
		</ul>
	</div>
	
	<div id="soqlOverRay">
		<div id="creatGridArea" class="create-dialog">
			<div class="tbl">
				<div class="row">
					<div class="label_col">
						<%= label_tag 'sObjects: ' %>
					</div>
					<div class="sobject-list input-sm2 select2-single">
						<%= @describe_result %>
					</div>
				</div>
				
				<div class="row">
					<div class="label_col2">
						<%= label_tag 'Fields: ' %>
					</div>
					<div>
						<%= text_area_tag :sobject_fields,"", :class => "sobjectFieldsTextarea", :spellcheck => false %>				
					</div>
				</div>
				<div class="row">
					<div>
						<%= label_tag 'Separator: ' %>
					</div>
					<div>
						<select id="separator">
							<option value="newline">New line</option>
							<option value="comma">Comma</option>							
						</select>
					</div>
				</div>

				<div class="row" style="height:20px;"></div>

				<div class="row">
					<div></div>
					<div>
						<%= button_tag "Create", :type => "button", :id => "createGridBtn", :class => "btn btn-xs btn-info ex-small-btn" %>
						<%= button_tag "Cancel", :type => "button", :id => "cancelCreateBtn", :class => "btn btn-xs btn-info ex-small-btn" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

