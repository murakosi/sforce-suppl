<style>
.my-grid {
background: white;
outline: 0;
border: 0px solid gray;
}

.my-tab{
	padding-right:7px;
}

.ui-tabs .ui-tabs-panel {
		padding: 0;
}

.handsontable span.colHeader{
    font-size: 10pt;
}

.handsontable th, .handsontable td{
    font-size: 10pt;
}

.handsontable span.data{
    color: black;
    font-style:bold;
}

#errorMessage{
    width: 50%;
    display: none;
    color: red;
    white-space: pre;
}

#mainArea{
	padding-top: 20px;
	width:100%;
	margin: 0 auto;
}

#formArea{
	width:70%;
	margin: 0 auto;
}

#tabArea{
	width:70%;
    margin:0px;
	border: 1px solid gray;
	margin: 0 auto;
}

</style>

<div id="menuList">
    <ul>
		<li><%= link_to 'Logout', logout_path, method: :delete %></li>
    </ul>
</div>

<div>
<h1>Soqlexecuter#index</h1>
<p>Find me in app/views/soqlexecuter/index.html.erb</p>
</div>

<div id="mainArea">
	<div id="formArea">
		<%= form_tag soqlexecuter_show_path(), :method => :post, :class => 'execute-form' do %>
		<%= text_area_tag :input_soql, 'select id,name from procure__c', :size => "120x5" %>
		<br>
		<%= submit_tag 'Execute', :class => 'btn btn-primary execute-soql' %>
		<% end %>
		<p><div id="errorMessage"></div></p>
		<%= button_tag 'Add tab', { "type" => "button", "id" => "add-tab","class" => "btn btn-primary"} %>
	</div>
	<div id="tabArea">
		<ul>
			<li><a href="#tab1">Grid 1</a></li>
		</ul>
		<div id="tab1" class="my-tab">
			<div id="myGrid1" class="my-grid"></div>
		</div>
	</div>
</div>